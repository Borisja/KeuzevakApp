<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SchoolClassInfo">

    <TextView
        android:id="@+id/classCodeInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="classCode"
        android:textSize="72px"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/classNameInfo"
        android:layout_width="232dp"
        android:layout_height="24dp"
        android:gravity="center"
        android:text="className"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classCodeInfo" />

    <TextView
        android:id="@+id/classEcInfo"
        android:layout_width="73dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:text="EC"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.896"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.27" />

    <TextView
        android:id="@+id/classPeriodInfo"
        android:layout_width="73dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:text="periodInfo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/classDescriptionInfo"
        app:layout_constraintTop_toBottomOf="@+id/classYearInfo"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/classYearInfo"
        android:layout_width="73dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="yearInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/classDescriptionInfo"
        app:layout_constraintTop_toBottomOf="@+id/classEcInfo" />

    <TextView
        android:id="@+id/classDescriptionInfo"
        android:layout_width="250dp"
        android:layout_height="162dp"
        android:text="classDescription"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classNameInfo"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/classNotesInfo"
        android:layout_width="318dp"
        android:layout_height="158dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Enter here your note(s)"
        android:inputType="textMultiLine"
        android:background="#D3D3D3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classDescriptionInfo"
        app:layout_constraintVertical_bias="0.105" />

    <EditText
        android:id="@+id/classGradeInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter your grade"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classNotesInfo"
        app:layout_constraintVertical_bias="0.142" />

    <Button
        android:id="@+id/saveClassBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/classInfoSaveBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.944"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.926" />

</androidx.constraintlayout.widget.ConstraintLayout>




